<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_0.5x">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_1.0x"
            android:layout_marginTop="@dimen/margin_padding_1.0x"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="@dimen/margin_padding_1.0x"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_0.5x"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_padding_3.0x"
                    android:layout_height="@dimen/margin_padding_3.0x"
                    android:src="@drawable/ic_liked" />

                <TextView
                    android:id="@+id/txt_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_padding_1.0x"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_22" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="@dimen/margin_padding_3.0x"
                android:layout_height="@dimen/margin_padding_3.0x"
                android:layout_marginBottom="@dimen/margin_padding_0.5x"
                android:src="@drawable/ic_like"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>